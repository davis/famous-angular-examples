fa-modifier(fa-scale='states.screenScale' fa-origin='[0.5, 0.5]' fa-align='[0.5, 0.5]')
  fa-view(fa-pipe-from='evt', fa-click='expand()')
      fa-flipper#flipper
        fa-view#front
          fa-surface#background(fa-z-index='100', fa-background-color='\'#333\'', fa-pipe-to='evt')
          fa-modifier(fa-translate='states.titleTranslate')
            fa-surface#title(fa-z-index='200') Untidy
          fa-modifier(fa-translate='states.hamburgerTranslate')
            fa-surface#hamburger(fa-z-index='200',fa-background-color='\'#FF9C2F\'', fa-size='[40, 40]', fa-color='\'white\'')
              i(class='fa fa-bars fa-2x')
          fa-modifier(fa-translate='states.arrowTranslate')
            fa-surface#arrow(fa-z-index='200', fa-background-color='\'white\'', fa-size='[40, 40]', fa-color='\'#FF9C2F\'')
              i(class='fa fa-arrow-right fa-2x')
          fa-modifier(fa-translate='states.searchTranslate')
            fa-surface#search(fa-z-index='200', fa-background-color='\'white\'', fa-size='[280, 30]', fa-color='\'#222\'', fa-click='expand')
              i(class='fa fa-search') searchbar
          fa-modifier(fa-translate='states.barsTranslate')
            fa-modifier(ng-repeat='bar in bars', fa-translate='bar.translate' fa-opacity='bar.opacity', fa-rotate-z='bar.rotate')
              fa-surface.icon(fa-z-index='300', fa-background-color='bar.bgCol', fa-size='[undefined, 80]')
        fa-view#back
          fa-surface