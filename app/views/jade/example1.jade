fa-modifier(fa-scale='transitionStates.screenScale' fa-origin='[0.5, 0.5]' fa-align='[0.5, 0.5]')
  fa-view(fa-pipe-from='evt', fa-click='flip()')
      fa-flipper#flipper
        fa-view#front
          fa-surface(fa-background-color='\'#FFF2D8\'', fa-pipe-to='evt')
          fa-modifier(fa-translate='transitionStates.titleTranslate')
            fa-surface#title() Untidy
          fa-modifier(fa-translate='transitionStates.hamburgerTranslate')
            fa-surface(fa-background-color='\'#FF9C2F\'', fa-size='[40, 40]', fa-color='\'white\'')  <i class="fa fa-bars fa-2x"></i>
          fa-modifier(fa-translate='transitionStates.arrowTranslate')
            fa-surface(fa-background-color='\'white\'', fa-size='[40, 40]', fa-color='\'#FF9C2F\'')  <i class="fa fa-arrow-right fa-2x"></i>
          fa-modifier(ng-repeat='bar in bars', fa-translate='bar.translate' fa-opacity='bar.opacity', fa-rotate-z='bar.rotate')
            fa-surface(fa-background-color='bar.bgCol', fa-size='[undefined, 80]')
        fa-view#back
          fa-surface(fa-background-color='\'#0000FF\'', fa-pipe-to='evt')